childCommentsDiv = $("div#child-comments-<%= parent_id %>");
childCommentsDiv.prepend("<%= escape_javascript(render('comments/comment', comment: @comment)) %>");
commentDiv = childCommentsDiv.children().first();
commentsDivID = "child-comments-<%= @comment.id %>";
commentDiv.append("<div id= " + commentsDivID + "></div>");

replyForm = "<%= escape_javascript(render('form', comment: new_comment, display_comment_field: display_comment))%>"
$("#reply-form-<%= @comment.parent_id %>").replaceWith(replyForm);

commentsCountSpan = $("li#comments-tab-<%= reference.id %> a span");
commentsCount = parseInt(commentsCountSpan.text());
commentsCountSpan.text(parseInt(commentsCount) + 1);