<% @title = "#{list.owner.username} | #{list.name}" %>
<% content_for :meta_og do %>
  <%= tag :meta, property: "og:type", content: "article" %>
  <%= tag :meta, property: "og:description", content: truncate(list.description, length: 400, separator: ' ') %>
  <%= tag :meta, property: "og:author", content: list.owner.username %>
  <%= tag :meta, property: "og:published_time", content: list.created_at.strftime('%Y-%m-%d %H:%M') %>
<% end %>
