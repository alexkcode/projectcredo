<% if paper.abstract.present? %>
  <i class = 'help-block'> This abstract is user generated and can be <%= link_to('editted', '#') if paper.abstract_editable %></i>
  <p><%= wrap_on_line_breaks paper.abstract %></p>
<% elsif current_user %>
 <%= render 'papers/abstract_form', paper: paper %>
<% else %>
  No abstract found. <%= link_to 'Sign in', new_user_session_path %> or <%= link_to 'Sign up', new_user_registration_path %> to add one.
<% end %>