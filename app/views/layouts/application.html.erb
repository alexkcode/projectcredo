<!DOCTYPE html>
<html>
  <head>
    <title>Project Credo</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-fixed-top navbar-default">
      <div class="container">
        <span><%= link_to 'Project Credo', root_path %></span>
        <span><%= text_field_tag :search, 'Reserved: future searches', disabled: true %></span>
        <span><%= render partial: 'layouts/user_session_links' %></span>
      </div>
    </nav>
    <% if notice %>
      <p class="notice"><%= notice %></p>
    <% elsif alert %>
      <p class="alert"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
