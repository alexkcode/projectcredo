<!DOCTYPE html>
<html>
  <head>
    <title><%= "Project Credo#{' | ' if @title}#{@title}" %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= render 'layouts/google_analytics' %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'Project Credo', root_path, class:"navbar-brand" %>
          <ul class="nav navbar-nav">
            <li><%= link_to 'Home', root_path %></li>
            <li><%= link_to 'About', about_path %></li>
          </ul>
        </div>
        <div class="collapse navbar-collapse" id="navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <li class="active"><%= link_to 'Sponsor Us','https://www.patreon.com/projectcredo', target: '_blank' %></li>
            <%= render 'layouts/user_session_links' %>
          </ul>
        </div>
      </div>
    </nav>

    <%
      close_button =
        button_tag(type: "button", class: "close", "data-dismiss": "alert", "aria-label": "Close") do
          content_tag(:span, '&times;'.html_safe, "aria_hidden": "true")
        end
    %>

    <div class="flash-messages">
      <%= content_tag(:p, "#{notice}#{close_button}".html_safe, class: "notice alert alert-info") if notice %>
      <%= content_tag(:p, "#{alert}#{close_button}".html_safe, class: "alert alert-danger") if alert %>
    </div>
    <div class="container<%= '-fluid' if @full_width %>">
      <%= yield %>
    </div>
    <%= console if Rails.env.development? %>
  </body>
</html>
