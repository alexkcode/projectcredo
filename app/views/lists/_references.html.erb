<ul>
  <% list.references.each do |reference| %>
    <li>
      <%= link_to reference.paper.title, paper_path(reference.paper) %>
      <%= link_to 'Remove', reference, method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>

  <%= form_for list.references.build, url: references_path(list) do |f| %>
    <%= hidden_field_tag :list_id, list.id %>
    <%= f.text_field :paper_id, placeholder: 'Add a paper by DOI, Pubmed ID, or Credo ID' %>
    <%= f.submit "Add Paper", class: "btn btn-primary" %>
  <% end %>
</ul>
