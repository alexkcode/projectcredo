<ul>
  <% list.references.each do |reference| %>
    <% if reference.paper.present? %>
      <li>
        <%= reference.paper.title %>
        <%= link_to 'Remove', reference, method: :delete,
                    data: { confirm: 'Are you sure?' } %>
      </li>
    <% end %>
  <% end %>

  <%= form_for list.references.build, url: references_path(list) do |f| %>
    <%= hidden_field_tag :list_id, list.id %>
    <%= f.text_field :paper_id, placeholder: 'Add a paper by ID' %>
    <%= f.submit "Add Paper", class: "btn btn-primary" %>
  <% end %>
</ul>
