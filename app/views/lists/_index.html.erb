<div class="cards">
  <% lists.each.each do |list| %>
    <div class="col-md-4 card">
      <div class="panel panel-default">
        <div class="panel-body">
           <% if user_signed_in? %>
            <div class="row">
              <div class="col-md-6">
                <%= render partial: 'lists/toggle_pin', locals: { list: list } %>
              </div>
              <div class="col-md-2">
                <%= render partial: 'votes/toggle_like', locals: { votable: list } %>
              </div>
              <div class="col-md-4">
                <small>
                  <%= link_to 'Edit ', edit_list_path(list) %>
                  <%= link_to ' Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %>
                </small>
              </div>
            </div>
          <% end %>
          <h2><%= link_to list.name, list %></h2>
          <p><%= list.description %></p>
          <small>
            Tags:<i><%= list.tag_list %></i></br>
            Updated On: <%= list.updated_at %></br>
          </small>
        </div>
      </div>
    </div>
  <% end %>
</div>
